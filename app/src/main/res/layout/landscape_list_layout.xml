<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/timeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/meetingStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_5"
            android:text="11.00AM"
            android:textColor="@color/timing_color"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginStart="@dimen/padding_10"
            android:layout_marginEnd="@dimen/padding_10"
            android:background="@color/light_border" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/meetingEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_10"
            android:paddingTop="@dimen/padding_5"
            android:paddingEnd="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:text="11.00AM"
            android:textColor="@color/timing_color"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0.6dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/timeLayout"
        android:background="@color/gray_dark"
        android:padding="@dimen/padding_10" />

    <LinearLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_toEndOf="@+id/divider"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_10">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/meetingDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_5"
            android:text="11.00AM"
            android:maxLines="2"
            android:textColor="@color/timing_color"
            android:textSize="@dimen/text_size_14" />

        <com.ankur.example.customViews.AppRobotoLightTextView
            android:id="@+id/attendeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_10"
            android:paddingTop="@dimen/padding_5"
            android:paddingEnd="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_10"
            android:text="11.00AM"
            android:maxLines="1"
            android:textColor="@color/timing_color"
            android:textSize="@dimen/text_size_15" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_below="@+id/descriptionLayout"
        android:background="@color/timing_color" />
</RelativeLayout>